---
import { projects } from "../../config/projects.json";
---

<h1 class="font-bold text-5xl my-5">Projects</h1>
{
  projects.map((project) => ( 
    <div class="flex flex-col md:flex-row mb-2 text-center md:text-left">
      <div class="flex-1 gap-y-3 p-2">
        <h2 class="font-bold my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
      </div>
      <div class="flex-1 p-2">
        <img
          src={project.image}
          alt="astro project picture test"
          class="w-48 m-auto"
        />
      </div>
    </div>
  ))
}
